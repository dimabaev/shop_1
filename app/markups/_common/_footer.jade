footer.footer
	.footer__top
		.container
			.footer_left
				a(href="#").logo.logo_footer
					img(scr="/img/logo/logos.png" alt="cooltech logo").logo__img
					.logo__text cooltech 
			.footer__right
				ul.socials.socials_footer
					- var items = ['fb', 'vk', 'tw']
					each item in items
						li(class="socials__item socials__item_" + item)
							a(href="#").socials__link
				ul.footer__nav
					-var items = ["Планшеты", "Мобильные телефоны", "Mp3 плееры", "Персональные компьютеры", "Аксессуары", "Бытовая техника"]
					each item in items
						li.footer__nav-item
							a(href="#").footer__nav-link= item
	.footer__bottom
		.container
			.footer__copyright All rights reservrd. 2015. No copy allowed.
