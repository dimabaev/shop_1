extends ../main

block title
	| Главная страница (main.psd)

block content
	article.content-wrapper
		.container
			.main-title
				| Мобильные телефоны
			.main-content
				
				include ../_common/_sidebar

				.content
					.sort
						.sort__left
							.sprt__select--wrap
								.sort__title
									| Сортировка по
								.sort__select
									select.sort__select-elem
										- var options = ["по цене", " по популярности"]
										each option in options
											option(value="")= options
						.sort__right
							.sort__title
								|Вид каталога
							.sort__view
								ul.sort__view-list
									- var items = ['row', 'grids', 'lines']
									each item in items
										li(class="sort__view-item sort__view-" + item data-view= item)
											a(href="#").sort__view-link
												.sort__view-icon
					.products
						ul.products__list.products__list_lines
							- for (var i = 0; i < 9; i++)
								li.products__item
									.products__item-inner
										.products__left
											.products__slideshow
												.products__slideshow-block
													a(href="#").products__slideshow-display
														img(src="" alt="")
													//- ul.products__slideshow-thumbs
													//-   - for (var = j; j < 3; j++)
													//- 		li.products__slideshow-item
													//- 			a(href="#")
													//- 				img(src="" + j alt="")
													.products__article
														.products__article-word Артикул
														.products__article-num 180238
											.products__desc
												.products__desc-title Samsung GT-I9301I  GALAXY S 3   
												ul.products__desc-options
													- var options = {"Тип SIM-карты": "Micro-SIM", "Количество SIM-карт": "1", "Цвет": "Белый", "ОC": "Android", "Связь 3G": "Есть", "4G (LTE)": "Нет", "GPS-модуль": "Есть" };
													//- each value, key in options
													- var index = 0;
													- for (item in options)
														li(class="products__option-item" + (!(index++ % 2) ? ' products__option-item_colored' : ''))
															.products__option-key= item
															.products__option-value= options[item]
												.products__rating
													ul.products__rating-stars
														li.products__rating-stars-item.products__rating-stars-item_fill
														li.products__rating-stars-item.products__rating-stars-item_fill
														li.products__rating-stars-item.products__rating-stars-item_fill
														li.products__rating-stars-item
														li.products__rating-stars-item
													.products__rating-amount 3
										.products__right
											.products__info
												.products__price 11 290
													i.rub
											.products__info-bottom
												a(href="#").products__buy-btn В корзину
												.products__availability
													| В наличии
						.pagination
							ul.pagination__list
								li.pagination__item.pagination__item-prev
									a(href="#").pagination__link
										.pagination__link
								- for (var i = 1; i < 4; i++)
									li.pagination__item
										a(href="#").pagination__link
											.pagination__mark= i
								li.pagination__item.pagination__item-next
									a(href="#").pagination__link
